{
  "manifest_version": 2,
  "version": "1.1",
  "name": "__MSG_extName__",
  "short_name": "Facebook Backup",
  "homepage_url": "http://socialmind.ai/facebook-backup/",
  "author": "Martin Majlis",
  "description": "__MSG_extDescription__",
  "default_locale": "en",
  "background": {
    "persistent": false,
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.facebook.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "browser_action": {
    "default_title": "Backup",
    "default_popup": "popup.html"
  },
  "permissions": [
    "*://*.facebook.com/*",
    "activeTab",
    "downloads",
    "storage"
  ],
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
